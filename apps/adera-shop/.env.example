# Adera-Shop Environment Configuration
# Copy this file to .env.local and fill in your actual values
# Note: Most values should match adera-ptp for consistency

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: Supabase Dashboard > Project Settings > API
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# PAYMENT GATEWAYS
# ============================================

# TeleBirr Configuration
EXPO_PUBLIC_TELEBIRR_APP_ID=your-telebirr-app-id
EXPO_PUBLIC_TELEBIRR_APP_KEY=your-telebirr-app-key
EXPO_PUBLIC_TELEBIRR_PUBLIC_KEY=your-telebirr-public-key
EXPO_PUBLIC_TELEBIRR_SHORT_CODE=your-short-code
TELEBIRR_PRIVATE_KEY=your-telebirr-private-key
EXPO_PUBLIC_TELEBIRR_CALLBACK_URL=https://your-domain.com/api/telebirr/callback

# Chapa Configuration
EXPO_PUBLIC_CHAPA_PUBLIC_KEY=your-chapa-public-key
CHAPA_SECRET_KEY=your-chapa-secret-key
EXPO_PUBLIC_CHAPA_CALLBACK_URL=https://your-domain.com/api/chapa/callback

# ArifPay Configuration (Optional)
EXPO_PUBLIC_ARIFPAY_API_KEY=your-arifpay-api-key
ARIFPAY_SECRET_KEY=your-arifpay-secret-key
EXPO_PUBLIC_ARIFPAY_CALLBACK_URL=https://your-domain.com/api/arifpay/callback

# ============================================
# MAPS & LOCATION
# ============================================
EXPO_PUBLIC_OSM_TILE_SERVER=https://tile.openstreetmap.org/{z}/{x}/{y}.png
EXPO_PUBLIC_OSM_ATTRIBUTION=Â© OpenStreetMap contributors
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token-here
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key-here

# ============================================
# NOTIFICATIONS
# ============================================
EXPO_PUBLIC_FCM_SERVER_KEY=your-fcm-server-key
EXPO_PUBLIC_FCM_SENDER_ID=your-fcm-sender-id

# SMS Gateway
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
ETHIOPIAN_SMS_API_URL=https://sms-gateway.et/api/send
ETHIOPIAN_SMS_API_KEY=your-sms-api-key
ETHIOPIAN_SMS_SENDER_ID=ADERA

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@adera.et
SMTP_FROM_NAME=Adera Shop

# ============================================
# APP CONFIGURATION
# ============================================
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_API_BASE_URL=https://api.adera.et
EXPO_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
EXPO_PUBLIC_ENABLE_GUEST_MODE=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_DARK_MODE=false
EXPO_PUBLIC_ENABLE_PRODUCT_REVIEWS=true
EXPO_PUBLIC_ENABLE_WISHLIST=true

# ============================================
# ANALYTICS & MONITORING
# ============================================
SENTRY_DSN=your-sentry-dsn-here
SENTRY_AUTH_TOKEN=your-sentry-auth-token
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# ============================================
# E-COMMERCE CONFIGURATION
# ============================================

# Commission Rates
EXPO_PUBLIC_SHOP_COMMISSION_RATE=0.04
EXPO_PUBLIC_BUYER_COMMISSION_RATE=0.02
EXPO_PUBLIC_SELLER_COMMISSION_RATE=0.02

# Product Limits
EXPO_PUBLIC_MAX_PRODUCT_IMAGES=5
EXPO_PUBLIC_MAX_PRODUCT_PRICE=100000.00
EXPO_PUBLIC_MIN_PRODUCT_PRICE=1.00

# Shop Configuration
EXPO_PUBLIC_MAX_PRODUCTS_PER_SHOP=1000
EXPO_PUBLIC_DEFAULT_DELIVERY_RADIUS=5000

# Order Configuration
EXPO_PUBLIC_ORDER_CANCELLATION_WINDOW_HOURS=2
EXPO_PUBLIC_AUTO_DELIVERY_ENABLED=true

# ============================================
# IMAGE & MEDIA CONFIGURATION
# ============================================

# Image Upload Limits
EXPO_PUBLIC_MAX_IMAGE_SIZE_MB=5
EXPO_PUBLIC_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# Image Optimization
EXPO_PUBLIC_IMAGE_QUALITY=0.8
EXPO_PUBLIC_THUMBNAIL_SIZE=300
EXPO_PUBLIC_PREVIEW_SIZE=800

# CDN Configuration (Optional)
EXPO_PUBLIC_CDN_URL=https://cdn.adera.et

# ============================================
# SEARCH & DISCOVERY
# ============================================

# Algolia (Optional - for advanced search)
EXPO_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
EXPO_PUBLIC_ALGOLIA_SEARCH_KEY=your-algolia-search-key
ALGOLIA_ADMIN_KEY=your-algolia-admin-key

# Search Configuration
EXPO_PUBLIC_SEARCH_RESULTS_PER_PAGE=20
EXPO_PUBLIC_ENABLE_FUZZY_SEARCH=true

# ============================================
# BUSINESS CONFIGURATION
# ============================================

# Delivery Integration
EXPO_PUBLIC_ENABLE_ADERA_DELIVERY=true
EXPO_PUBLIC_DELIVERY_BASE_FEE=50.00
EXPO_PUBLIC_FREE_DELIVERY_THRESHOLD=500.00

# Promotions
EXPO_PUBLIC_ENABLE_FLASH_SALES=true
EXPO_PUBLIC_ENABLE_COUPONS=true
EXPO_PUBLIC_MAX_DISCOUNT_PERCENTAGE=50

# Reviews & Ratings
EXPO_PUBLIC_MIN_RATING=1
EXPO_PUBLIC_MAX_RATING=5
EXPO_PUBLIC_ENABLE_REVIEW_MODERATION=true

# ============================================
# DEVELOPMENT TOOLS
# ============================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_DEMO_MODE=false
EXPO_PUBLIC_MOCK_PAYMENTS=false
EXPO_PUBLIC_SHOW_DEV_MENU=true

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Content Security
EXPO_PUBLIC_ENABLE_CONTENT_MODERATION=true
EXPO_PUBLIC_PROFANITY_FILTER=true

# ============================================
# NOTES
# ============================================
# 
# 1. Use the SAME Supabase credentials as adera-ptp
# 2. Use the SAME payment gateway credentials
# 3. Keep all SECRET keys secure
# 4. EXPO_PUBLIC_ variables are exposed to client
# 5. Update .gitignore to exclude .env.local
#
